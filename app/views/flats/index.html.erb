  <h2> All our flats </h2>
<div class="container">
  <% @flats.each do |flat| %>
    <div class="flat-card">
      <div class="flat-infos">
        <h3><%= flat.name %></h3>
        <p><%= flat.address %></p>
        <i class="fas fa-users"><%= flat.number_of_guests %></i>
        <i class="fas fa-dollar-sign"><%= flat.price_per_night %></i>
      </div>
      <div class="link">
        <%= link_to "More info", "flats/#{flat.id}" %>
      </div>
    </div>
  <% end %>
</div>
